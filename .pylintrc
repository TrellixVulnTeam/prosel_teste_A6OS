[MASTER]
profile=no
ignore=.git,migrations,venv
load-plugins=pylint_django

[MESSAGES CONTROL]
disable=all
enable=bad-indentation
       blacklisted-name
       cyclic-import
       dangerous-default-value
       deprecated-method
       exception-message-attribute
       f-string-without-interpolation
       function-redefined
       import-error
       import-self
       invalid-name
       invalid-overridden-method
       modelform-uses-exclude
       no-name-in-module
       no-self-argument
       possibly-unused-variable
       print-statement
       property-with-parameters
       redefined-builtin
       redefined-outer-name
       redundant-unittest-assert
       reimported
       signature-differs
       undefined-all-variable
       undefined-variable
       unnecessary-pass
       unreachable
       unused-import
       unused-variable
       unused-wildcard-import
       wildcard-import

[REPORTS]
output-format=colorized
include-ids=yes

[TYPECHECK]
ignored-classes=SQLObject
zope=no
generated-members=REQUEST,acl_users,aq_parent,objects,DoesNotExists

[VARIABLES]
init-import=no
dummy-variables-rgx=_|dummy
additional-builtins=

[BASIC]
no-docstring-rgx=__.*__
module-rgx=(([a-z_][a-z0-9_]*)|([A-Z][a-zA-Z0-9]+))$
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$
class-rgx=[A-Z_][a-zA-Z0-9]+$
function-rgx=[a-z_][a-z0-9_]{2,30}$
method-rgx=[a-z_][a-z0-9_]{2,30}$
attr-rgx=[a-z_][a-z0-9_]{2,30}$
argument-rgx=[a-z_][a-z0-9_]{2,30}$
variable-rgx=[a-z_][a-z0-9_]{2,30}$
inlinevar-rgx=[A-Za-z_][A-Za-z0-9_]*$
good-names=i,j,k,ex,Run,_,qs,uo,js,pk
bad-names=foo,bar,baz,toto,tutu,tata,a,b
bad-functions=map,filter,apply,input,locals,test,int

[DESIGN]
max-args=6
max-locals=15
max-returns=6
max-branchs=12
max-statements=50
max-parents=7
max-attributes=20
min-public-methods=0
max-public-methods=30

[CLASSES]
defining-attr-methods=__init__,__new__,setUp

[IMPORTS]
deprecated-modules=regsub,string,TERMIOS,Bastion,rexec
import-graph=
ext-import-graph=
int-import-graph=

[MISCELLANEOUS]
notes=FIXME,XXX,TODO

[SIMILARITIES]
min-similarity-lines=4
ignore-comments=yes
ignore-docstrings=yes

[FORMAT]
max-line-length=100
max-module-lines=5000
indent-string='    '
